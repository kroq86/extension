{
  "manifest_version": 3,
  "name": "Screenshot Extension for Interview Helper",
  "short_name": "Screenshot Extension",
  "version": "1.2",
  "permissions": ["activeTab"],
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Alt+Shift+4"
      },
      "description": "Take a screenshot"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}

