{
  "manifest_version": 3,
  "name": "Screenshot Extension for Interview Helper",
  "short_name": "Screenshot Extension",
  "version": "1.4",
  "permissions": ["activeTab", "storage", "commands"],
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1",
        "windows": "Ctrl+Shift+1",
        "linux": "Ctrl+Shift+1"
      },
      "description": "Take a screenshot"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
